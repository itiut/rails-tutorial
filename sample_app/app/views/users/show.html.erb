<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <%= render partial: 'shared/user_info', locals: { user: @user } %>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="span8">
    <%= render 'follow_form' if signed_in? %>
    <%= render partial: 'shared/list', locals: {
      head: "Microposts (#{@user.microposts.count})",
      items: @microposts,
      item_class: 'micropost',
      uid: @user.id
    } %>
  </div>
</div>
